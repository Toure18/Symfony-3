{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>

            <a>
                <th>Program</th>
                {% for program in actor.programs %}
               <li><a href="{{ path('program_show', {'id': program.id}) }}">{{ program.title }} </li></a>
                {% else %}
                    <li>Aucune série associer à cette acteur</li>
                {% endfor %}
            </tr>


        </tbody>
    </table>

    <a href="{{ path('actor_index') }}">back to list</a>

    <a href="{{ path('actor_edit', {'id': actor.id}) }}">edit</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
